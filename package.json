{
  "name": "@run-z/optionz",
  "version": "2.1.1",
  "description": "Run-z command line options parser",
  "keywords": [
    "cli",
    "command-line",
    "run-z"
  ],
  "homepage": "https://github.com/run-z/optionz",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:run-z/optionz.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/run-z/optionz/issues"
  },
  "type": "module",
  "main": "./dist/optionz.cjs",
  "module": "./dist/optionz.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/optionz.js",
      "require": "./dist/optionz.cjs"
    },
    "./colors": {
      "import": "./dist/optionz.colors.js",
      "require": "./dist/optionz.colors.cjs"
    },
    "./help": {
      "import": "./dist/optionz.help.js",
      "require": "./dist/optionz.help.cjs"
    }
  },
  "dependencies": {
    "@proc7ts/primitives": "^1.8.1",
    "string-width": "^4.2.2",
    "wrap-ansi": "^7.0.0"
  },
  "peerDependencies": {
    "chalk": "^4.1.0"
  },
  "peerDependenciesMeta": {
    "chalk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@run-z/eslint-config": "^1.2.1",
    "@run-z/rollup-helpers": "^1.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.20.4",
    "@types/wrap-ansi": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "chalk": "^4.1.0",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.1.7",
    "gh-pages": "^3.1.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "rollup": "^2.40.0",
    "rollup-plugin-flat-dts": "^1.0.3",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "run-z": "=1.6.1-bootstrap",
    "shx": "^0.3.3",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^26.5.3",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.30",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "bootstrap": "rollup --config ./rollup.config.js",
    "build": "run-z +z bootstrap",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf index.d.ts '*/index.d.ts' dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z +z --then eslint .",
    "test": "run-z +z --then jest",
    "z": "run-z +bootstrap,+doc,+lint,+test"
  }
}
