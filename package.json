{
  "name": "@run-z/optionz",
  "version": "2.4.0",
  "description": "Run-z command line options parser",
  "keywords": [
    "cli",
    "command-line",
    "run-z"
  ],
  "homepage": "https://github.com/run-z/optionz",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:run-z/optionz.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/run-z/optionz/issues"
  },
  "type": "module",
  "main": "./dist/optionz.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./dist/optionz.js",
    "./colors": "./dist/optionz.colors.js",
    "./help": "./dist/optionz.help.js"
  },
  "dependencies": {
    "@proc7ts/primitives": "^3.0.2",
    "string-width": "^5.1.2",
    "wrap-ansi": "^8.0.1"
  },
  "peerDependencies": {
    "chalk": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "chalk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@jest/globals": "^28.1.3",
    "@run-z/eslint-config": "^3.1.1",
    "@run-z/prettier-config": "^2.0.0",
    "@run-z/rollup-helpers": "^2.0.0",
    "@types/node": "^16.11.48",
    "@types/wrap-ansi": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "chalk": "^5.0.1",
    "eslint": "^8.22.0",
    "eslint-plugin-jest": "^26.8.2",
    "gh-pages": "^4.0.0",
    "jest": "^28.1.3",
    "jest-junit": "^14.0.0",
    "jest-mock": "^28.1.3",
    "prettier": "^2.7.1",
    "rollup": "^2.77.3",
    "rollup-plugin-flat-dts": "^1.6.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.32.1",
    "run-z": "=1.10.0-bootstrap",
    "shx": "^0.3.4",
    "strip-ansi": "^7.0.1",
    "ts-jest": "^28.0.7",
    "tslib": "^2.4.0",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript": "4.7"
      }
    }
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "bootstrap": "rollup -c",
    "build": "run-z +z bootstrap",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf \"index.d.ts?(.map)\" \"*/index.d.ts?(.map)\" dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "format": "run-z +z --then prettier --write \"**/*.{json,md}\"",
    "lint": "run-z +z --then eslint .",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:jest"
  }
}
