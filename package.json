{
  "name": "@run-z/optionz",
  "version": "1.0.0",
  "description": "Run-z command line options parser",
  "keywords": [
    "cli",
    "command-line",
    "run-z"
  ],
  "homepage": "https://github.com/run-z/optionz",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:run-z/optionz.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/run-z/optionz/issues"
  },
  "main": "dist/optionz.js",
  "module": "dist/optionz.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/optionz.mjs",
      "require": "./dist/optionz.js"
    },
    "./colors": {
      "import": "./dist/optionz.colors.mjs",
      "require": "./dist/optionz.colors.js"
    },
    "./help": {
      "import": "./dist/optionz.help.mjs",
      "require": "./dist/optionz.help.js"
    }
  },
  "dependencies": {
    "@proc7ts/a-iterable": "^2.7.0",
    "@proc7ts/call-thru": "^4.0.0",
    "@proc7ts/primitives": "^1.1.0",
    "string-width": "^4.2.0",
    "wrap-ansi": "^7.0.0"
  },
  "peerDependencies": {
    "chalk": "^4.1.0"
  },
  "peerDependenciesMeta": {
    "chalk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@proc7ts/eslint-config": "^2.0.4",
    "@proc7ts/rollup-helpers": "^1.0.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.2",
    "@types/wrap-ansi": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chalk": "^4.1.0",
    "codecov": "^3.7.2",
    "eslint": "^7.7.0",
    "eslint-plugin-jest": "^23.20.0",
    "gh-pages": "^3.1.0",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0",
    "rollup": "^2.26.8",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "run-z": "^1.0.0",
    "shx": "^0.3.2",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^26.3.0",
    "tslib": "^2.0.1",
    "typedoc": "^0.19.0",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "bootstrap": "rollup --config ./rollup.config.js",
    "build": "run-z +z bootstrap",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf d.ts dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z +z --then eslint .",
    "test": "run-z +z --then jest",
    "z": "run-z +build,+doc,+lint,+test"
  }
}
