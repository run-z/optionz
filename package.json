{
  "name": "@run-z/optionz",
  "version": "2.3.0",
  "description": "Run-z command line options parser",
  "keywords": [
    "cli",
    "command-line",
    "run-z"
  ],
  "homepage": "https://github.com/run-z/optionz",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:run-z/optionz.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/run-z/optionz/issues"
  },
  "type": "module",
  "main": "./dist/optionz.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./dist/optionz.js",
    "./colors": "./dist/optionz.colors.js",
    "./help": "./dist/optionz.help.js"
  },
  "dependencies": {
    "@proc7ts/primitives": "^3.0.2",
    "string-width": "^5.0.1",
    "wrap-ansi": "^8.0.1"
  },
  "peerDependencies": {
    "chalk": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "chalk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@jest/globals": "^27.3.1",
    "@run-z/eslint-config": "^2.0.0",
    "@run-z/rollup-helpers": "^1.1.1",
    "@types/node": "^14.17.34",
    "@types/wrap-ansi": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chalk": "^5.0.0",
    "eslint": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "gh-pages": "^3.2.3",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "jest-mock": "^27.3.0",
    "remark-cli": "^10.0.1",
    "remark-lint-list-item-indent": "^3.1.0",
    "remark-lint-no-shortcut-reference-link": "^3.1.0",
    "remark-preset-lint-recommended": "^6.1.1",
    "rollup": "^2.60.1",
    "rollup-plugin-flat-dts": "^1.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.1",
    "run-z": "=1.9.3-bootstrap",
    "shx": "^0.3.3",
    "strip-ansi": "^7.0.1",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "bootstrap": "rollup -c",
    "build": "run-z +z bootstrap",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf 'index.d.ts?(.map)' '*/index.d.ts?(.map)' dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z + lint:md --and eslint .",
    "lint:md": "run-z +z --then remark .",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:remark,+cmd:jest"
  }
}
