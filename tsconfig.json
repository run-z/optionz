{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ES2015",
    "target": "ES2019",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": ["ES2019"],
    "types": ["wrap-ansi"],
    "skipLibCheck": true,
    "outDir": "target/js",
    "sourceMap": true,
    "newLine": "LF"
  },
  "include": ["src/**/*"]
}
